pipeline {
    agent any

    environment {
        IMAGE_NAME = "flask-app"
    }

    stages {
        stage('Clone Repository') {
            steps {
                // Specify branch name explicitly
                git branch: 'main', url: 'https://github.com/Mohammedsiddiq080/FMS2.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Build Docker image for the Flask app
                    sh 'docker build -t ${IMAGE_NAME}:latest .'
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                script {
                    // Stop and remove any existing container with the same name
                    sh 'docker stop flask-app || true'
                    sh 'docker rm flask-app || true'

                    // Run the Flask app in a new container
                    sh 'docker run -d -p 5000:5000 --name flask-app ${IMAGE_NAME}:latest'
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline execution completed.'
        }
    }
}
